<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{text}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  
  <p>
    <button class="theClassicBlogComment">Comment this post!</button>
  </p>
  <div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a new comment:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="text">comment text:</label>
        <textarea class="form-input" id="text" name="text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>

<div class="footer">
  <p>Footer</p>
</div>
